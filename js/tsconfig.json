{
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "declarationDir": "dist/types",
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true
    },
    "include": ["src/**/*.ts"]
}
